<li {{action "showModal" true}} tabindex="0">
  <strong>{{book.title}}</strong><br><br>
  <em>by</em><br>
  {{link-to book.author.name 'author' book.author.id class="author" }}
</li>

{{#if isShowingModal}}
  {{#modal-dialog onClose=(action "showModal" false) clickOutsideToClose=true}}

    <div class="modal">
      <h3>Purchase confirmation</h3>
      You want to buy<br>
      <strong>{{book.title}}</strong><br>
      by<br>
      {{book.author.name}}.

      <p>
        <button {{action "showModal" false}}>Purchase for 
            {{format-number book.price minimumFractionDigits=2 style="currency" currency="CAD"}}!
        </button>
      </p>

      <p>
        <em>Thank you! We will e-mail you your e-book</em>
      </p>

    </div>

  {{/modal-dialog}}
{{/if}}
